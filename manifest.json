{
  "name": "Simple tabs count",
  "version": "0.1",
  "description": "Show tabs number in badge",
  "permissions": ["tabs"],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/get_started16.png"
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2
}
